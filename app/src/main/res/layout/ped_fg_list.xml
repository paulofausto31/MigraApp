<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="migra.br.smart.listaPedidoFg.ListaPedidoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/frag_lv_list_pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <TableLayout
                    android:layout_weight="1"
                    >
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25dp"
                            android:layout_gravity="center"
                            android:text="R$"/>
                        <TextView
                            android:id="@+id/tvPedFgLstTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginLeft="10dp"

                            android:text="0"
                            android:textSize="30dp"
                            />
                    </TableRow>
                </TableLayout>
                <TableLayout>
                    <TableRow>
                        <TextView
                            android:id="@+id/tvPedFgLstLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginLeft="10dp"

                            android:text="0"
                            android:textSize="30dp"
                            />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btNovoAberto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOVO ABERTO"
                    />
                <Button
                    android:id="@+id/btNovoFechado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOVO FECHADO"
                    />
                <Button
                    android:id="@+id/btRetransmitir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RETRANSMITIR"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>
