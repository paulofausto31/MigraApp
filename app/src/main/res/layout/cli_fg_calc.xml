<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TableLayout android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow>
                    <TableLayout android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATA INICIAL"/>
                        <TableRow>

                            <EditText
                                android:id="@+id/edtDatIni"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:layout_weight="1"
                                />
                        </TableRow>

                        </TableLayout>

                    <TableLayout android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DATA FINAL"/>
                        <TableRow>

                            <EditText
                                android:id="@+id/edtDatFim"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="date"
                                />
                        </TableRow>
                    </TableLayout>

                </TableRow>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS DOS PEDIDOS" />
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spinStatusPed"
                            android:layout_weight="11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </Spinner>
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FORMA PAGAMENTO"
                        />
                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <Spinner
                            android:id="@+id/spCodFormPg"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                        </Spinner>
                    </TableRow>
                    <TableRow>
                        <TableLayout
                            android:layout_weight="1"
                            >
                            <CheckBox
                                android:id="@+id/chTotTodsRotas"
                                android:text="TODAS AS ROTAS"
                                android:layout_weight="1"
                                />
                            <!--TOTAL DE TODAS AS ROTAS-->
                            <TextView
                                android:id="@+id/tvTotTodsRotas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:text="0000"
                                />
                        </TableLayout>
                        <TableLayout
                            android:layout_weight="1"
                            >
                            <CheckBox
                                android:id="@+id/chTotRotAtual"
                                android:text="ESTA A ROTA"
                                android:layout_weight="1"
                                />
                            <!--TOTAL DA ROTA ATUAL-->
                            <TextView
                                android:id="@+id/tvTotRotAtual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:text="0000"
                                />
                        </TableLayout>
                    </TableRow>

                        <TableLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <Button
                                android:id="@+id/btTotForRot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="CALCULAR"
                                />
                        </TableLayout>
                </TableLayout>

            </TableLayout>


</ScrollView>